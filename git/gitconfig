[user]
	name = Dmitry Sichkar
	email = dmmeteo@gmail.com

[core]
	editor = vim
	excludesfile = ~/.gitignore_global
	quotepath = off
	autocrlf = false
	safecrlf = false

[diff]
	tool = vim -d

[alias]
	st = status
	br = branch
	hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
	co = checkout
	ci = commit
	type = cat-file -t
	dump = cat-file -p
	ignore = "!gi() { curl -sL https://www.gitignore.io/api/vim,osx,emacs,linux,macos,windows,pycharm,virtualenv,sublimetext,visualstudiocode,$@ ;}; gi"

[color]
	ui = true
	branch = true
	diff = true
	interactive = true
	status = true

[push]
	default = matching
